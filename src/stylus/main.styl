body , html
	width 100%
	height 100%
	min-height 100%
	background #FAFAFA
	font-family Helvetica, sans-serif
	font-variant normal
	font-weight 300
	overflow hidden

#share
	text-align right
	padding 10px

#global
	position absolute
	top 50%
	left 50%
	margin-top -75px
	margin-left -250px
	height 150px
	width 500px
	z-index 10

h1
	margin 0 auto 10px auto
	font-size 36px
	text-align center

h2
	margin 0 auto 20px auto
	font-size 18px
	text-align center

.color
	position relative
	width 50px
	height 50px
	float left
	cursor pointer

	div
		display none

	.bubble
		position absolute
		z-index 5
		border-radius 50%
		background #f00
		top 10px
		left 10px
		width 30px
		height 30px
		display block

	.bubble2
		position absolute
		z-index 4
		border-radius 50%
		background #000
		opacity .1
		display block
		transition all .4s
		-webkit-transition all .4s
		top 25px
		left 25px
		&.activate	
			top 0
			left 0
			width 50px
			height 50px

	&.pink .bubble
		background pink
	&.orange .bubble
		background orange
	&.yellow .bubble
		background yellow
	&.red .bubble
		background red
	&.grey .bubble
		background grey
	&.white .bubble
		background white
	&.green .bubble
		background green
	&.purple .bubble
		background purple
	&.skyblue .bubble
		background skyblue
	&.darkblue .bubble
		background darkblue
	

.circle
	border-radius 50%
	background #f00

.triangle
	width 0px
	height 0px
	border-style solid
	border-width 0 0 0 0

.container
	position absolute
	top 0
	left 0
	height 100%
	min-height 100%
	width 100%

	div
		position absolute
		transition all .3s
		-webkit-transition all .3s

